<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsNouvelleActivity">

    <ImageView
        android:id="@+id/imgDetailsNouvelle"
        android:layout_width="112dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/titreDetailsNouvelle"
        android:layout_width="248dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/imgDetailsNouvelle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionNouvelle"
        android:layout_width="341dp"
        android:layout_height="196dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LabeldateParution" />

    <TextView
        android:id="@+id/LabeldateParution"
        android:layout_width="96dp"
        android:layout_height="23dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:text="Date parution:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDetailsNouvelle" />

    <TextView
        android:id="@+id/dateParution"
        android:layout_width="259dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/LabeldateParution"
        app:layout_constraintTop_toBottomOf="@+id/titreDetailsNouvelle" />

    <TextView
        android:id="@+id/link"
        android:layout_width="349dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:autoLink="web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionNouvelle" />
</android.support.constraint.ConstraintLayout>