<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSite"
        android:layout_width="112dp"
        android:layout_height="77dp"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <RelativeLayout
        android:layout_width="301dp"
        android:layout_height="78dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSupprimerNouvelle"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="11dp"
            android:layout_weight="1"
            android:background="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/titreSite"
            android:layout_width="197dp"
            android:layout_height="43dp"
            android:layout_alignTop="@+id/btnSupprimerNouvelle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="-3dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/nombreNouvelles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="155dp"
            android:layout_marginBottom="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/titreSite"
            android:layout_alignTop="@+id/nombreNouvelles"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Nombre de nouvelles :" />
    </RelativeLayout>

</LinearLayout>
